{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "classify": {
      "$ref": "#/definitions/classify"
    },
    "ignore": {
      "$ref": "#/definitions/ignore"
    },
    "justification": {
      "$ref": "#/definitions/justification"
    },
    "attachments": {
      "$ref": "#/definitions/attachments"
    },
    "criticality": {
      "$ref": "#/definitions/criticality"
    },
    "matcher": {
      "$ref": "#/definitions/matcher"
    },
    "differences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "regex": {
            "type": "boolean",
            "default": "false"
          },
          "code": {
            "type": "string"
          },
          "old": {
            "$ref": "#/definitions/elementMatch"
          },
          "new": {
            "$ref": "#/definitions/elementMatch"
          },
          "classify": {
            "$ref": "#/definitions/classify"
          },
          "ignore": {
            "$ref": "#/definitions/ignore"
          },
          "justification": {
            "$ref": "#/definitions/justification"
          },
          "attachments": {
            "$ref": "#/definitions/attachments"
          },
          "criticality": {
            "$ref": "#/definitions/criticality"
          }
        },
        "additionalProperties": {
          "type": "string"
        },
        "required": [
          "code"
        ]
      },
      "minItems": 1
    }
  },
  "required": ["differences"],
  "definitions": {
    "classification": {
      "type": "string",
      "enum": [
        "EQUIVALENT",
        "NON_BREAKING",
        "POTENTIALLY_BREAKING",
        "BREAKING"
      ]
    },
    "classify": {
      "type": "object",
      "properties": {
        "SOURCE": {
          "$ref": "#/definitions/classification"
        },
        "BINARY": {
          "$ref": "#/definitions/classification"
        },
        "SEMANTIC": {
          "$ref": "#/definitions/classification"
        },
        "OTHER": {
          "$ref": "#/definitions/classification"
        }
      },
      "minProperties": 1
    },
    "ignore": {
      "type": "boolean"
    },
    "justification": {
      "type": "string"
    },
    "attachments": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "criticality": {
      "type": "string"
    },
    "matcher": {
      "type": "string"
    },
    "elementMatch": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "matcher": {
              "$ref": "#/definitions/matcher"
            },
            "match": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}
