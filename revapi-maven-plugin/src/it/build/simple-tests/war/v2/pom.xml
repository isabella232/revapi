<project>
    <modelVersion>4.0.0</modelVersion>

    <groupId>war.group</groupId>
    <artifactId>war.artifact</artifactId>
    <version>2.0.0</version>
    <packaging>war</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.1.0</version>
            </plugin>
            <plugin>
                <groupId>org.revapi</groupId>
                <artifactId>revapi-maven-plugin</artifactId>
                <version>@project.version@</version>
                <dependencies>
                    <dependency>
                        <groupId>org.revapi</groupId>
                        <artifactId>revapi-java</artifactId>
                        <version>@revapi-java.version@</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>api-check</id>
                        <goals>
                            <goal>check</goal>
                            <goal>report</goal>
                        </goals>
                        <configuration>
                            <reportSeverity>nonBreaking</reportSeverity>
                            <analysisConfiguration>
                                <revapi.ignore>
                                    <item>
                                        <code>java.class.kindChanged</code>
                                        <new>class pkg1.pkg2.WarClass</new>
                                        <justification>This incompat is here just check that the files in the war file actually got copied.</justification>
                                    </item>
                                    <item>
                                        <code>java.method.finalMethodAddedToNonFinalClass</code>
                                        <classQualifiedName>pkg1.pkg2.WarClass</classQualifiedName>
                                        <justification>This incompat is here just check that the files in the war file actually got copied.</justification>
                                    </item>
                                </revapi.ignore>
                            </analysisConfiguration>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
